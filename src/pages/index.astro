---
import '../styles/global.css';
import Particles from '../components/React/Particles';
import SocialMediaLogo from '../components/Astro/SocialMediaLogo.astro';
import devPicture from '../assets/dev.jpeg';
import { Image } from 'astro:assets';
import Layout from '../components/Astro/Layout.astro';
import ColoredText from '../components/Astro/ColoredText.astro';
---

<Layout>
    <Particles client:only /> 
    <header class="relative z-1 pt-20 pb-16">
        <div class="w-40 h-40 m-12 p-3 bg-white/10 rounded-full backdrop-blur-sm mx-auto hover-lift">
          <Image src={devPicture} alt="developer's profile" class="w-full h-full rounded-full object-cover" aria-label="developer's profile" loading={'eager'} />
        </div>
        <div class="text-center mb-12">
          <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-8 py-3 w-fit mx-auto mb-3 hover-lift  ">
            <span class="text-blue-500 text-lg font-mono ">@Mijazu</span>
          </div>
          <ColoredText text="Misael Zurita" size={'md'} />
          <h2 class="text-2xl mb-4  typing-animation"> Full stack developer </h2>
          <p class="text-lg text-gray-400">Full Stack Developer | React JS | Make it possible</p>
        </div>
        <div class="flex justify-center gap-6">
          <SocialMediaLogo social={'github'} url='https://github.com/MiJaZu' />
          <SocialMediaLogo social={'linkedin'} url='https://www.linkedin.com/in/misael-zurita' />
        </div>
    </header>
    <main class="flex justify-center p-100 relative z-10">
    </main>
  </Layout>

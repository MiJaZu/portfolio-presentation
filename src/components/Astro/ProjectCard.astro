---
import Tags from './Tags.astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
}

const { title, description, tags } = Astro.props;
---

<div
  class="bg-white/10 border-2 border-white/10 rounded-2xl p-4 md:p-8 flex flex-col justify-between gap-3 hover:animate-pulse"
>
  <div>
    <h2 class="text-2xl font-bold mb-5">{title}</h2>
    <p class="text-gray-300 leading-relaxed">{description}</p>
  </div>
  <Tags tags={tags} />
</div>

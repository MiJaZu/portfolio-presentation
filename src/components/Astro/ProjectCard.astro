---
import Tags from '../React/Tags';

interface Props {
  title: string;
  description: string;
  tags: string[];
}

const { title, description, tags } = Astro.props;
---

<div
  class="bg-white/10 border-2 border-white/10 rounded-2xl p-8 flex flex-col gap-3 hover:animate-pulse"
>
  <h2 class="text-2xl font-bold">{title}</h2>
  <p class="text-gray-300 leading-relaxed">{description}</p>
  <Tags tags={tags} />
</div>
